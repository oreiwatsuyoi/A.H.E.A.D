{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      ".firebase/**",
      "functions/**",
      "package.json",
      "package-lock.json",
      "README.md",
      ".next/**",
      "out/**",
      "app/**",
      "src/**",
      "my-webrtc-app/**",
      "public/**",
      "*.config.js",
      "*.config.ts",
      "tsconfig.json",
      "middleware.ts",
      "*.log"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      }
    ]
  },
  "functions": {
    "source": "functions"
  }
}
